# This requires CGX 2.10
read Zug.frd new
seta base se all
seto 3D
  copy base base1 tra 0 0 0
  swep base1 new rot y 270 30
setc
pnt p0 0 0 0
pnt py 0 2 0
copy 3D new mir py p0

ds -0 e 1
view disp
view elem
frame
steps 11
plot fv all
max  2 f l
min  -0.2 f l
rot y
rot c 90
rot l 25
rot u 15
zoom 2
plot fv all
hcpy png
sys mv hcpy_1.png PE-expanded.png

plot f all n
hcpy png
sys mv hcpy_2.png expanded.png

plus ev base
hcpy png
sys mv hcpy_3.png 2D3D.png
